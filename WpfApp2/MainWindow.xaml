<Window x:Class="WpfApp2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock FontSize="25">usuario</TextBlock>
            <TextBox FontSize="20" x:Name="txtUsuario"></TextBox>
            <TextBlock FontSize="25">contraseña</TextBlock>
            <PasswordBox FontSize="20" Name="txtContrasena"></PasswordBox>
            <Button Click="Button_Click" FontSize="20">Aceder</Button>
        </StackPanel>  
    </Grid>
</Window>
